# Allow me to sudo my aliases
alias sudo="sudo "

# Replace Vi with Vim
alias vi="vim"

# Default python/pip 3 instead of 2.7
alias python="python3"
alias pip="pip3"

# Git Aliases
alias gh="open https://github.com/dingwilson"
alias gs="git status"
alias gd="git diff"
alias gl="git log"
alias gi="git init"
alias ga="git add -A"
alias gac="git add -A&&git commit -m"
alias gc="git commit -m"
alias gpush="git push origin"
alias gpull="git pull origin"
alias grao="git remote add origin"
alias grso="git remote set-url origin"
alias grebase="git rebase -i"
alias gclone="git clone"
alias gcheckout="git checkout"
alias gfetch="git fetch"

createGithubRepo() {
	CURRENTDIR=${PWD##*/}
	GITHUBUSER="dingwilson"
    USER="dingwilson"

	curl -u ${USER:-${GITHUBUSER}} https://api.github.com/user/repos -d "{\"name\": \"${REPONAME:-${CURRENTDIR}}\", \"description\": \"${DESCRIPTION}\", \"private\": \"true\"}"

	git remote add origin git@github.com:${USER:-${GITHUBUSER}}/${REPONAME:-${CURRENTDIR}}.git
}

alias ghc=createGithubRepo

concatenateVideosWithFFMPEG() {
	ffmpeg -f concat -safe 0 -i <(for f in ./*.mp4; do echo "file '$PWD/$f'"; done) -c copy output.mp4
}

alias catmp4=concatenateVideosWithFFMPEG

# IP Address Aliases
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

# CD Aliases
alias cdsd="cd '/Volumes/ExtDrive'"
alias cdhd="cd '/Volumes/Macintosh HD'"

# Remount SD Slot
alias remountsd="sudo kextunload /System/Library/Extensions/AppleStorageDrivers.kext/Contents/PlugIns/AppleUSBCardReader.kext; sudo kextload /System/Library/Extensions/AppleStorageDrivers.kext/Contents/PlugIns/AppleUSBCardReader.kext"

# Update Everything
alias update="brew update; brew upgrade; brew cleanup; brew prune -f;sudo gem update; sudo gem cleanup;"

# Show/hide hidden files in Finder
alias showfiles="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidefiles="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# XCode Remove Derived Data
alias xcdd="rm -rf ~/Library/Developer/Xcode/DerivedData/*"

# Empty Trash
alias trash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl; sqlite3 ~/Library/Preferences/com.apple.LaunchServices.QuarantineEventsV* 'delete from LSQuarantineEvent'"

# Recursively delete `.DS_Store` files
alias clean="find . -type f -name '*.DS_Store' -ls -delete"
